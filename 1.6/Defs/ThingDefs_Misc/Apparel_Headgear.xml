<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ##### Industrial ##### -->
  <!-- +++++ Bandana +++++ -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>VFES_Headgear_Bandana</defName>
    <label>bandana</label>
    <description>A warm and long piece of fabric protecting the jaw from exposure to wind. Makes one hard to remember.</description>
    <graphicData>
      <texPath>Things/Headgear/Bandana/Bandana</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <tradeability>Sellable</tradeability>
    <generateCommonality>0.3</generateCommonality>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.08</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <ToxicResistance>0.05</ToxicResistance>
      <PainShockThreshold>0.05</PainShockThreshold>
    </equippedStatOffsets>
    <thingCategories Inherit="False">
      <li>Headgear</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Teeth</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Headgear/Bandana/Bandana</wornGraphicPath>
    
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

